{
  "emmet.includeLanguages": {
    "javascript": "html",
    "typescript": "html",
  },
  "json.schemas": [
    {
      "fileMatch": [ "/src/i18n/{it,fr,es,en}.json" ],
      "url": "/src/schemas/translations.json",
    }
  ],
  "generateJSONSchema.jsDoc": "extended",
  "generateJSONSchema.additionalProperties": true,
  "generateJSONSchema.sortProps": true,
  "generateJSONSchema.skipTypeCheck": true,
  "generateJSONSchema.expose": "all",
  "generateJSONSchema.topRef": true,
  "generateJSONSchema.minify": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock,pnpm-lock.yaml, .npmrc, .nvmrc, .node-version",
    ".env": ".env.*",
    "vite.config.*": "vitets.config.*",
    "astro.config.*": "auth.config.*",
    "jsconfig.json": "jsconfig.*.json",
    ".eslintrc": ".eslintignore",
    ".eslintrc.*": ".eslintignore",
    "eslint.config.*": ".eslintignore",
    ".prettier": ".prettierignore",
    ".prettierrc.*": ".prettierignore",
    ".gitignore": ".editorconfig",
    "LICENSE": "LICENSE-MIT.*, LICENSE-APACHE-2.0.*",
    "README.md": "CHANGELOG.md, CONTRIBUTING.md, *.md",
    "tailwind.config.*": "postcss.config.*",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*",
    "forge.config.*": "forge.env.d.ts, vite.*.config.ts"
  },
}
